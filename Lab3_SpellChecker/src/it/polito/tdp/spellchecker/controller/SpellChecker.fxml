<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.spellchecker.controller.SpellCheckerController">
   <top>
      <Label text="Lab3_SpellChecker" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label layoutY="5.0" text="Choose the language:" />
                  <MenuButton layoutX="145.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="128.0" text="Language">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Italian" />
                      <MenuItem mnemonicParsing="false" text="English" />
                    </items>
                  </MenuButton>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <TextArea prefHeight="200.0" prefWidth="480.0" />
                  <Button layoutX="389.0" layoutY="200.0" mnemonicParsing="false" onAction="#doSpellCheck" text="Spell Check" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </AnchorPane>
            <AnchorPane prefHeight="252.0" prefWidth="400.0">
               <children>
                  <Label layoutY="-8.0" text="Wrong words" />
                  <TextArea layoutY="17.0" prefHeight="200.0" prefWidth="480.0" />
                  <Label layoutX="229.0" layoutY="222.0" text="The text contains X errors" textFill="RED" />
                  <Button layoutX="398.0" layoutY="217.0" mnemonicParsing="false" onAction="#doClearText" text="Clear Text" AnchorPane.topAnchor="217.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </AnchorPane>
         </children>
      </VBox>
   </center>
   <bottom>
      <Label text="Spell check completed in X.XXXXXXXXX seconds" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets bottom="5.0" left="10.0" right="5.0" />
         </BorderPane.margin>
      </Label>
   </bottom>
</BorderPane>
